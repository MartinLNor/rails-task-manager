<div class="wrapper">
  <div class="container">
    <h1>My Tasks</h1>
    <ul class="list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
      <% if task.completed %>
      <i class="fas fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task), class: 'linked' %>
      <%= link_to '', task_path(task), method: 'delete', class: 'fas fa-trash-alt linked', data: {confirm: "You Sure?"} %>
      </li>
    <% end %>
    </ul>
    <div>
      <%= link_to 'Create a new task', new_task_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>
